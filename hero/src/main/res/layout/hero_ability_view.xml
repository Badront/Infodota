<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/view_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_view_padding">

        <ImageView
            android:id="@+id/ability_img"
            android:layout_width="@dimen/hero_ability_view_image"
            android:layout_height="@dimen/hero_ability_view_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/ability_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/half_view_padding"
            android:layout_marginStart="@dimen/half_view_padding"
            android:layout_toEndOf="@id/ability_img"
            android:layout_toRightOf="@id/ability_img"
            android:textColor="@android:color/white"
            android:textSize="@dimen/hero_ability_name_textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/skill_affects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ability_name"
            android:layout_marginLeft="@dimen/half_view_padding"
            android:layout_marginStart="@dimen/half_view_padding"
            android:layout_toEndOf="@id/ability_img"
            android:layout_toRightOf="@id/ability_img"
            android:textSize="@dimen/hero_ability_affects_textSize" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/skill_other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_view_padding"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/skill_params_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/skill_lore_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/youtube"
        android:drawablePadding="@dimen/half_view_padding"
        android:drawableStart="@drawable/youtube"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/half_view_padding"
        android:paddingStart="@dimen/half_view_padding"
        android:singleLine="true"
        android:text="@string/watch_on_youtube"
        android:textSize="@dimen/hero_ability_affects_textSize"
        android:visibility="gone" />
</LinearLayout>