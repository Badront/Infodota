<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badr.infodota"
    android:installLocation="auto">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:label="@string/app_name"
        android:allowBackup="true"
        android:name=".DotaApplication"
        android:icon="@drawable/icon"
        android:theme="@style/Infodota">

        <activity
            android:name=".activity.LoaderActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListHolderActivity"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".activity.HeroInfoActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.GuideActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.ItemInfoActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.MatchInfoActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.PlayerInfoActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.MatchPlayerInfoActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.AboutActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.QuizActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.GuideCreatorActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.ItemSelectActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.PlayerByHeroStatsActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.PlayerCommonStatsActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.CosmeticItemInfoActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.TwitchPlayActivity"
            android:theme="@style/Infodota.OverlayActionBar"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.CounterPickerHeroesSelectActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <activity
            android:name=".activity.NewsItemActivity"
            android:configChanges="keyboard|orientation|screenSize" />

        <activity
            android:name=".activity.LeagueGameActivity"
            android:configChanges="keyboard|orientation|screenSize" />
        <activity
            android:name=".activity.TI4Activity"
            android:configChanges="keyboard|orientation|screenSize" />
        <!--<activity
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
                android:name="com.google.ads.AdActivity" />-->
        <service android:name="com.octo.android.robospice.UncachedSpiceService"
            android:exported="false"/>
        <service android:name=".util.retrofit.LocalSpiceService"
            android:exported="false"/>

    </application>
</manifest>
